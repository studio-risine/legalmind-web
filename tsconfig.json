{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@components/*": ["./src/components/*"],
			"@libs/*": ["./src/libs/*"],
			"@modules/*": ["./src/modules/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@infra/*": ["./src/infra/*"],
			"@utils/*": ["./src/utils/*"],
			"@config/*": ["./src/config/*"],
			"@typings/*": ["./src/types/*"],
			"@constants/*": ["./src/constants/*"],
			"@env": ["./src/env.ts"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": [
		"node_modules",
		"src/supabase/functions/**"
	]
}
