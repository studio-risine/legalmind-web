		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"convex": "^1.26.2",
		"next": "15.5.2",
		"next-themes": "^0.4.6",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"react-hook-form": "^7.62.0",
		"remixicon": "^4.6.0",
		"tailwind-merge": "^3.3.1",
