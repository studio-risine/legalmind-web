		"@tailwindcss/postcss": "^4",
		"@tc96/biome-config": "^2.0.0",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"tailwindcss": "^4",
		"tw-animate-css": "^1.3.7",
		"typescript": "^5"
	}
